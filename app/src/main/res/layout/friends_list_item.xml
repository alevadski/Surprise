<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/friends_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/color_primary"
        android:textStyle="bold"
        tools:text="Alex Levadski" />

    <TextView
        android:id="@+id/friends_list_item_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/friends_list_item_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color_primary"
        tools:text="alevadski@gmail.com" />

    <TextView
        android:id="@+id/friends_list_item_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/online"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#0f0"
        android:textStyle="italic" />

</RelativeLayout>